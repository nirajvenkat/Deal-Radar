<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:id="@+id/deal_list_row_layout"
                android:background="@drawable/rectangle_shape"
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:layout_height="match_parent">

    <ImageView
            android:layout_marginRight="3dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/deal_list_category_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <LinearLayout
            android:padding="5dp"
            android:id="@+id/deal_list_top_layout"
            android:layout_toLeftOf="@id/deal_list_category_image"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:id="@+id/deal_list_signal"/>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/deal_list_company"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/deal_list_title"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/deal_list_expdate"
                    android:textColor="#cc0000"
                    android:textSize="15sp"
                    />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>